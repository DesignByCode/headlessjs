{
  "name": "vanilla-headless",
  "version": "0.1.2",
  "main": "build/index.js",
  "description": "Inspired by HeadlessUi, Vanilla Headless is Web Component library that adds interactive with keyboard and mouse events",
  "repository": "https://github.com/DesignByCode/vanilla-headless",
  "homepage": "https://github.com/DesignByCode/vanilla-headless",
  "scripts": {
    "clean": "rd /s /q esm dist lib build .cache>nul 2>&1|echo.>nul",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "precommit": "npm run test && lint-staged",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.json && rollup -c"
  },
  "keywords": [
    "headlessui",
    "popover",
    "dropdown",
    "navigation toggle"
  ],
  "author": "designbycode",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "autoprefixer": "^10.4.12",
    "eslint": "^8.24.0",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^29.0.3",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
